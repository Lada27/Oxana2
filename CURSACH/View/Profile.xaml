<Window x:Class="CURSACH.View.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CURSACH.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="Profile"
        Height="500"
        Width="850">
    <Window.Resources>
        <Style TargetType="ScrollViewer"
            x:Key="CustomScrollViewerStyle">
            <Setter Property="Background"
                 Value="Transparent" />

        </Style>
    </Window.Resources>
    <Border Background="#F4F4F4"
            BorderBrush="#0747A6"
            BorderThickness="4">

        <Grid Cursor="">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />

                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Профиль"
                           Foreground="#F4F4F4"
                           FontSize="10"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           Margin="10,0,0,0" />
                <Button x:Name="btnMinimize"
                        BorderThickness="0"
                        Content="-"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click"
                        HorizontalAlignment="Left"
                        Width="25">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="#0747A6" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#0747A6" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18"
                                    Height="18"
                                    CornerRadius="0"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnMaximaze"
                        BorderThickness="0"
                        Content="[ ]"
                        Foreground="White"
                        FontSize="10"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnMaximaze_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="#0747A6" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#0747A6" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18"
                                    Height="18"
                                    CornerRadius="0"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnClose"
                        BorderThickness="0"
                        Content="X"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="3"
                        Click="btnClose_Click" Height="30" VerticalAlignment="Top">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="#F5DEB3" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#C62DAE" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18"
                                    Height="18"
                                    CornerRadius="0"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnProfile"
                            BorderThickness="0"
                            Foreground="#F5DEB3"
                            FontSize="14"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="0,0,0,0"
                            Click="btnProfile_Click">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="#0747A6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#0747A6" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border CornerRadius="0"
                                        Height="30"
                                        Width="100"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Профиль"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnHome"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="14"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="30,0,30,0"
                            VerticalAlignment="Center"
                            Click="btnHome_Click_1">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="#0747A6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#0747A6" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border CornerRadius="0"
                                        Height="30"
                                        Width="100"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Домой"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnTasks"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="14"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="0,0,0,0"
                            Click="btnTasksManaement_Click">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="#0747A6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#F5DEB3" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border CornerRadius="0"
                                        Height="30"
                                        Width="100"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Управление"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                        
                      
                    </Button>

                    <Button x:Name="btnUsers"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="14"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="30,0,30,0"

                            Click="btnUsers_Click">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="#0747A6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#F5DEB3" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border CornerRadius="0"
                                        Height="30"
                                        Width="100"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Пользователи"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>



                </StackPanel>

            </Grid>

            <Grid Grid.Row="2">

                <Border Background="White"
                        Margin="5"
                        Grid.Column="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="0.5*" />
                                </Grid.ColumnDefinitions>

                                <TextBox Text="Имя:"
                     Grid.Column="1"
                     TextAlignment="Left"
                     Foreground="Black"
                     HorizontalAlignment="Left"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="25"
                     FontFamily="Montserrat"
                     Grid.Row="2"
                     VerticalAlignment="Center" />

                                <TextBox Name="UserName"
                     Text="Иван Иванов"
                     Foreground="Black"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="25"
                     FontWeight="Bold"
                     FontFamily="Montserrat"
                     TextAlignment="Left"
                     Grid.Column="2"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center" />
                            </Grid>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="0.5*" />
                                </Grid.ColumnDefinitions>

                                <TextBox Text="Почта:"
                     Grid.Column="1"
                     TextAlignment="Left"
                     Foreground="Black"
                     HorizontalAlignment="Left"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="25"
                     FontFamily="Montserrat"
                     Grid.Row="2"
                     VerticalAlignment="Center" />

                                <TextBox Name="UserEmail"
                     Text="email"
                     TextAlignment="Left"
                     Foreground="Black"
                     HorizontalAlignment="Center"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="25"
                     FontFamily="Montserrat"
                     Grid.Column="2"
                     VerticalAlignment="Center" />
                            </Grid>

                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="1.1*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="0.5*" />
                                </Grid.ColumnDefinitions>

                                <TextBox Text="Телефон:"
                     Grid.Column="1"
                     TextAlignment="Left"
                     Foreground="Black"
                     HorizontalAlignment="Left"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="25"
                     FontFamily="Montserrat"
                     Grid.Row="2"
                     VerticalAlignment="Center" />

                                <TextBox Name="UserPhone"
                     Text="phone"
                     TextAlignment="Left"
                     Foreground="Black"
                     HorizontalAlignment="Center"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="25"
                     FontFamily="Montserrat"
                     Grid.Column="2"
                     VerticalAlignment="Center" />
                            </Grid>

                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="1.1*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="0.5*" />
                                </Grid.ColumnDefinitions>

                                <TextBox Text="Пароль:"
                     Grid.Column="1"
                     TextAlignment="Left"
                     Foreground="Black"
                     HorizontalAlignment="Left"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="25"
                     FontFamily="Montserrat"
                     VerticalAlignment="Center" />

                                <TextBox Name="UserPassword"
                     Text="password"
                     Foreground="Black"
                     HorizontalAlignment="Center"
                     Background="Transparent"
                     TextAlignment="Left"
                     BorderThickness="0"
                     FontSize="25"
                     FontFamily="Montserrat"
                     Grid.Column="2"
                     VerticalAlignment="Center" />
                            </Grid>

                            <Grid Grid.Row="5">
                                


                                <Button x:Name="btnExit"
                    Grid.Column="0"
                    Content="Выйти"
                    Foreground="#160C31"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    FontSize="25"
                    VerticalAlignment="Center"
                    Grid.Row="5"
                    Click="btnExit_Click"
                    Margin="0,10,0,0"
                    BorderBrush="#0747A6"
                    BorderThickness="10">

                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Background"
                                Value="#F5F5F5" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                     Value="True">
                                                    <Setter Property="Background"
                                        Value="#F5DEB3" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border  BorderBrush="#F4F4F4"
                                 BorderThickness="1"
                                 CornerRadius="0"
                                 Width="180"
                                 Height="38"
                                 Background="{TemplateBinding Background}">
                                                <ContentPresenter Margin="10,2,2,10"
                                              HorizontalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBox Text="Уведомления"
Grid.Row="0"
TextAlignment="Left"
Foreground="Black"
HorizontalAlignment="Center"
Background="Transparent"
BorderThickness="0"
FontSize="25"
FontFamily="Montserrat"
VerticalAlignment="Center" />
                            <ScrollViewer Grid.Row="1"
              Style="{StaticResource CustomScrollViewerStyle}"
              Margin="20,0,20,10"
              VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="cbNotifications">
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                
                </Border>
            </Grid>

        </Grid>
    </Border>
</Window>

