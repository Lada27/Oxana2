<Window x:Class="CURSACH.View.TaskDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CURSACH.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="Team"
        Height="500"
        Width="850">

    <Window.Resources>
        <!-- Стиль для ComboBox -->
        <Style x:Key="CustomComboBoxStyle"
               TargetType="ComboBoxItem">

            <Setter Property="Foreground"
                    Value="#0747A6" />
            <!-- Цвет текста -->
            <Setter Property="Background"
                    Value="White" />
            <!-- Цвет фона -->
            <Setter Property="BorderBrush"
                    Value="Blue" />
            <!-- Цвет границы -->
            <Setter Property="BorderThickness"
                    Value="1" />
            <!-- Толщина границы -->

        </Style>

        <Style TargetType="{x:Type DatePicker}">
            <Style.Resources>
                <Style TargetType="DatePickerTextBox">
                    <Setter Property="Background"
                            Value="Transparent" />
                    <Setter Property="BorderThickness"
                            Value="0" />

                </Style>
            </Style.Resources>
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="FontSize"
                    Value="15" />

            <Style.Triggers>
                <!-- your triggers here -->
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>

        <Border
                Background="#F4F4F4"
                BorderBrush="#0747A6"
                BorderThickness="4"
                Opacity="0.4">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="25" />

                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Подробности задачи"
                               Foreground="#F4F4F4"
                               FontSize="10"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0" />
                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background"
                                        Value="#0747A6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#278BEF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"
                                        Height="18"
                                        CornerRadius="0"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnMaximaze"
                            BorderThickness="0"
                            Content="[ ]"
                            Foreground="White"
                            FontSize="10"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnMaximaze_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background"
                                        Value="#0747A6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#278BEF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"
                                        Height="18"
                                        CornerRadius="0"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="3"
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background"
                                        Value="#F5DEB3" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#C62DAE" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"
                                        Height="18"
                                        CornerRadius="0"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

            </Grid>
        </Border>

        <Grid>
            <Border
                    Background="White"
                    BorderBrush="#0747A6"
                    BorderThickness="4"
                    Margin="15">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1.7*" />

                        <RowDefinition Height="0.1*" />

                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnCloseTaskDetail"
                                    BorderThickness="0"
                                    Content="X"
                                    Foreground="#0747A6"
                                    FontSize="20"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    Grid.Column="0"
                                    Click="btnCloseDetails_Click"
                                    VerticalAlignment="Top"
                                    Margin="0,15,0,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background"
                                                Value="White" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="#F5DEB3" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="35"
                                                Height="35"
                                                CornerRadius="0"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <ScrollViewer Grid.Column="1">
                                <TextBox x:Name="TaskDescription"
                                         Text="Задача 1"
                                         Foreground="#160C31"
                                         FontSize="25"
                                         FontWeight="Bold"
                                         FontFamily="Montserrat"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         TextWrapping="Wrap"
                                         Margin="5"
                                         BorderThickness="0" />
                            </ScrollViewer>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1">
                        <ScrollViewer>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.5*" />
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="0.3*" />
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="0.5*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="1"
                                                Orientation="Vertical">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />

                                                <RowDefinition Height="*" />

                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0"
                                                  Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="4*" />
                                                </Grid.ColumnDefinitions>


                                                <TextBlock  Text="Автор"
                                                            Foreground="#160C31"
                                                            FontSize="19"
                                                            FontFamily="Montserrat"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            TextWrapping="Wrap"
                                                            Grid.ColumnSpan="2"
                                                            Margin="0,0,90,0" />
                                            </Grid>

                                            <Border Grid.Row="1"
                                                    Background="#EDEDED"
                                                    CornerRadius="0"
                                                    BorderBrush="#F5DEB3"
                                                    BorderThickness="2"
                                                    Margin="0,0,0,10"
                                                    Height="35">

                                                <ComboBox Name="cbAuthor"
                                                          SelectedIndex="0"
                                                          Foreground="#160C31"
                                                          Background="Transparent"
                                                          IsEnabled="False"
                                                          FontSize="19"
                                                          FontFamily="Montserrat"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          BorderThickness="0"
                                                          Margin="2"
                                                          BorderBrush="Transparent">


                                                </ComboBox>

                                            </Border>

                                            <Grid Grid.Row="2"
                                                  Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="4*" />
                                                </Grid.ColumnDefinitions>


                                                <TextBlock  Text="Статус"
                                                            Foreground="#160C31"
                                                            FontSize="19"
                                                            FontFamily="Montserrat"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            TextWrapping="Wrap "
                                                            Grid.Column="1" />
                                            </Grid>

                                            <Border Grid.Row="3"
                                                    Background="#EDEDED"
                                                    CornerRadius="0"
                                                    BorderBrush="#F5DEB3"
                                                    BorderThickness="2"
                                                    Margin="0,0,0,0"
                                                    Height="35">

                                                <ComboBox Name="cbStatus"
                                                          SelectedIndex="0"
                                                          Foreground="#160C31"
                                                          Background="Transparent"
                                                          FontSize="19"
                                                          FontFamily="Montserrat"
                                                          HorizontalAlignment="Center"
                                                          BorderThickness="0"
                                                          IsEditable="False"
                                                          BorderBrush="Transparent"
                                                          Margin="0,0,0,2">

                                                </ComboBox>
                                            </Border>
                                            <Grid Grid.Row="4"
                                                  Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock  Text="Выделено времени"
                                                            Foreground="#160C31"
                                                            FontSize="19"
                                                            FontFamily="Montserrat"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            TextWrapping="Wrap "
                                                            Grid.Column="1" />
                                            </Grid>

                                            <Border Grid.Row="5"
                                                    Background="#EDEDED"
                                                    CornerRadius="0"
                                                    BorderBrush="#F5DEB3"
                                                    BorderThickness="2"
                                                    Margin="0,0,0,0"
                                                    Height="35">

                                                <TextBox Name="tbTimeAllocated"
                                                          Foreground="#160C31"
                                                          Background="Transparent"
                                                          FontSize="19"
                                                          FontFamily="Montserrat"
                                                          HorizontalAlignment="Center"
                                                          BorderThickness="0"
                                                          BorderBrush="Transparent"
                                                          Margin="0,0,0,2">

                                                </TextBox>
                                            </Border>

                                        </Grid>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3"
                                                Orientation="Vertical">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />

                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0"
                                                  Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="4*" />
                                                </Grid.ColumnDefinitions>


                                                <TextBlock  Text="Приоритет"
                                                            Foreground="#160C31"
                                                            FontSize="19"
                                                            FontFamily="Montserrat"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            TextWrapping="Wrap"
                                                            Grid.Column="1" />
                                            </Grid>

                                            <Border Grid.Row="1"
                                                    Background="#EDEDED"
                                                    CornerRadius="0"
                                                    BorderBrush="#F5DEB3"
                                                    BorderThickness="2"
                                                    Margin="0,0,0,10"
                                                    Height="35">

                                                <ComboBox Name="cbPriority"
                                                          SelectedIndex="0"
                                                          Foreground="#160C31"
                                                          Background="Transparent"
                                                          FontSize="19"
                                                          FontFamily="Montserrat"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          BorderThickness="0"
                                                          IsEditable="False"
                                                          Margin="2"
                                                          BorderBrush="Transparent">

                                                </ComboBox>
                                            </Border>

                                            <Grid Grid.Row="2"
                                                  Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="4*" />
                                                </Grid.ColumnDefinitions>


                                                <TextBlock  Text="Дедлайн"
                                                            Foreground="#160C31"
                                                            FontSize="19"
                                                            FontFamily="Montserrat"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            TextWrapping="Wrap"
                                                            Grid.Column="1" />
                                            </Grid>

                                            <Border Grid.Row="3"
                                                    Background="#EDEDED"
                                                    CornerRadius="0"
                                                    BorderBrush="#F5DEB3"
                                                    BorderThickness="2"
                                                    Height="35"
                                                    Margin="0,0,0,10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition />

                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Name="tbSelectedDate"
                                                               Margin="10,2"
                                                               Text="{Binding ElementName=dpDeadline, Path=SelectedDate}"
                                                               FontSize="19"
                                                               Foreground="Black"
                                                               Background="Transparent"
                                                               Grid.Column="0" />

                                                    <DatePicker Name="dpDeadline"
                                                                SelectedDate="{Binding Deadline}"
                                                                SelectedDateChanged="DatePicker_SelectedDateChanged"
                                                                IsDropDownOpen="False"
                                                                SelectedDateFormat="Short"
                                                                Margin="25,2"
                                                                FontSize="19"
                                                                Foreground="White"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                BorderBrush="Transparent"
                                                                Grid.Column="1"
                                                                Visibility="Visible"/>

                                                </Grid>

                                            </Border>

                                            <Grid Grid.Row="4"
                                                  Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock  Name ="TimeSpent" Text="Потрачено времени"
                                                            Foreground="#160C31"
                                                            FontSize="19"
                                                            FontFamily="Montserrat"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            TextWrapping="Wrap "
                                                            Grid.Column="1" />
                                            </Grid>

                                            <Border Name ="brTimeSpent" Grid.Row="5"
                                                    Background="#EDEDED"
                                                    CornerRadius="0"
                                                    BorderBrush="#F5DEB3"
                                                    BorderThickness="2"
                                                    Margin="0,0,0,0"
                                                    Height="35">

                                                <TextBox Name="tbTimeSpent"
                                                         Foreground="#160C31"
                                                         Background="Transparent"
                                                         FontSize="19"
                                                         FontFamily="Montserrat"
                                                         HorizontalAlignment="Center"
                                                         BorderThickness="0"
                                                         BorderBrush="Transparent"
                                                         Margin="0,0,0,2">

                                                </TextBox>
                                            </Border>

                                        </Grid>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="1"
                                      Margin="15,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.6*" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="5*" />

                                    </Grid.ColumnDefinitions>


                                    <TextBlock Name = "Assigned" Text="Исполнитель"
                                               Foreground="#160C31"
                                               FontSize="19"
                                               FontFamily="Montserrat"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               Grid.Column="1" />

                                    <Border Name ="brAssigned"  Grid.Column="1"
                                            Background="#EDEDED"
                                            CornerRadius="0"
                                            BorderBrush="#F5DEB3"
                                            BorderThickness="2"
                                            Margin="267,0,0,10"
                                            Height="35" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="445">

                                        <ComboBox Name="cbAssigned"
                                                  SelectedIndex="0"
                                                  Foreground="#160C31"
                                                  Background="Transparent"
                                                  IsEditable="False"
                                                  FontSize="19"
                                                  FontFamily="Montserrat"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  BorderThickness="0"
                                                  Margin="2"
                                                  BorderBrush="Transparent">

                                        </ComboBox>

                                    </Border>

                                </Grid>

                                <Grid Grid.Row="2"
                                      Margin="15,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.6*" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="5*" />

                                    </Grid.ColumnDefinitions>


                                    <TextBlock Text="Кмментарии"
                                               Foreground="#160C31"
                                               FontSize="19"
                                               FontFamily="Montserrat"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               Grid.Column="1" />

                                    <Border Grid.Column="2"
                                            Background="#EDEDED"
                                            CornerRadius="0"
                                            BorderBrush="#F5DEB3"
                                            BorderThickness="2"
                                            Margin="0,0,0,10"
                                            Height="100">
                                        <TextBox x:Name="tbComments"
                                                 FontSize="15"
                                                 FontFamily="Montserrat"
                                                 Foreground="Black"
                                                 CaretBrush="LightGray"
                                                 BorderBrush="#F4F4F4"
                                                 BorderThickness="0,0,0,2"
                                                 Height="100"
                                                 TextWrapping="Wrap"
                                                 VerticalContentAlignment="Center"
                                                 Margin="0,0,0,0"
                                                 Padding="20,0,0,0"
                                                 Background="Transparent" />

                                    </Border>

                                </Grid>
                                <Grid Grid.Row="3"
                                      Margin="15,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.6*" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="5*" />

                                    </Grid.ColumnDefinitions>


                                    <TextBlock Text="Тип"
                                               Foreground="#160C31"
                                               FontSize="19"
                                               FontFamily="Montserrat"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               Grid.Column="1" />

                                    <Border Grid.Column="2"
                                            Background="#EDEDED"
                                            CornerRadius="0"
                                            BorderBrush="#F5DEB3"
                                            BorderThickness="2"
                                            Margin="0,0,0,10"
                                            Height="35">
                                        <ComboBox Name="cbType"
                                                  SelectedIndex="0"
                                                  Foreground="#160C31"
                                                  Background="Transparent"
                                                  FontSize="19"
                                                  FontFamily="Montserrat"
                                                  HorizontalAlignment="Center"
                                                  BorderThickness="0"
                                                  IsEditable="False"
                                                  BorderBrush="Transparent"
                                                  Margin="0,0,0,2">

                                        </ComboBox>

                                    </Border>

                                </Grid>

                                <Grid Grid.Row="4"
                                      Margin="15,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />

                                        </Grid.ColumnDefinitions>

                                        <Button x:Name="btnDeleteTask"
                                                Grid.Column="0"
                                                Content="Удалить"
                                                Foreground="#160C31"
                                                FontFamily="Montserrat"
                                                Cursor="Hand"
                                                FontSize="19"
                                                VerticalAlignment="Center"
                                                Click="DeleteTask_Click"
                                                BorderBrush="#0747A6"
                                                BorderThickness="10">

                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background"
                                                            Value="#F5F5F5" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter Property="Background"
                                                                    Value="#F5DEB3" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Button.Template>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border  BorderBrush="#F4F4F4"
                                                             BorderThickness="1"
                                                             CornerRadius="0"
                                                             Width="190"
                                                             Height="38"
                                                             Background="{TemplateBinding Background}">
                                                        <ContentPresenter Margin="10,5,5,10"
                                                                          HorizontalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <Button x:Name="btnSave"
                                                Grid.Column="1"
                                                Content="Сохранить"
                                                Foreground="#160C31"
                                                FontFamily="Montserrat"
                                                Cursor="Hand"
                                                FontSize="19"
                                                VerticalAlignment="Center"
                                                Click="btnSave_Click"
                                                BorderBrush="#0747A6"
                                                BorderThickness="10">

                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background"
                                                            Value="#F5F5F5" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter Property="Background"
                                                                    Value="#F5DEB3" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Button.Template>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border  BorderBrush="#F4F4F4"
                                                             BorderThickness="1"
                                                             CornerRadius="0"
                                                             Width="190"
                                                             Height="38"
                                                             Background="{TemplateBinding Background}">
                                                        <ContentPresenter Margin="10,5,5,10"
                                                                          HorizontalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                    </Grid>

                                </Grid>

                            </Grid>
                        </ScrollViewer>

                    </Grid>

                </Grid>

            </Border>
        </Grid>
    </Grid>
</Window>



