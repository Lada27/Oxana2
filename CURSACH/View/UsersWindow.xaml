<Window x:Class="CURSACH.View.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CURSACH.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="Home"
        Height="500"
        Width="850">

    <Window.Resources>
        <Style TargetType="ScrollViewer"
               x:Key="CustomScrollViewerStyle">
            <Setter Property="Background"
                    Value="Transparent" />

        </Style>
    </Window.Resources>

    <Border Background="#F4F4F4"
            BorderBrush="#0747A6"
            BorderThickness="4">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />

                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />

                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Домой"
                           Foreground="#F4F4F4"
                           FontSize="10"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0" />
                <Button x:Name="btnMinimize"
                        BorderThickness="0"
                        Content="-"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="#0747A6" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#278BEF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18"
                                    Height="18"
                                    CornerRadius="0"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnMaximaze"
                        BorderThickness="0"
                        Content="[ ]"
                        Foreground="White"
                        FontSize="10"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnMaximaze_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="#0747A6" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#278BEF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18"
                                    Height="18"
                                    CornerRadius="0"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnClose"
                        BorderThickness="0"
                        Content="X"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="3"
                        Click="btnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="#F5DEB3" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#C62DAE" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18"
                                    Height="18"
                                    CornerRadius="0"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnProfile"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="14"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="10,0,0,0"
                            Click="btnProfile_Click">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="#0747A6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#F5DEB3" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border CornerRadius="0"
                                        Height="30"
                                        Width="100"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Профиль"
                                       Margin="0,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnHome"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="14"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="30,0,30,0"
                            VerticalAlignment="Center"
                            Click="btnHome_Click">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="#0747A6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#F5DEB3" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border CornerRadius="0"
                                        Height="30"
                                        Width="100"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Домой"
                                       Margin="0,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnTasks"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="14"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="0,0,0,0"
                            Click="btnTasks_Click">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="#0747A6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#F5DEB3" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border CornerRadius="0"
                                        Height="30"
                                        Width="100"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Управление"
                                       Margin="0,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnUsers"
                            BorderThickness="0"
                            Foreground="#F5DEB3"
                            FontSize="14"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="30,0,30,0"
                           >

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="#0747A6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#0747A6" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border CornerRadius="0"
                                        Height="30"
                                        Width="100"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Пользователи"
                                       Margin="0,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                </StackPanel>

            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>

                <Border Background="White"
                        Margin="5"
                        Grid.Column="1">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="1">
                                    <Button x:Name="btnAddUser"
                                            BorderThickness="0"
                                            Content="+"
                                            Foreground="White"
                                            FontSize="20"
                                            Margin="10"
                                            FontFamily="Montserrat"
                                            Cursor="Hand"
                                            Grid.Column="1"
                                            Click="btnAddUser_Click">

                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Background"
                                                        Value="#0747A6" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                Value="#F5DEB3" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.Template>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>

                                <Grid Grid.Column="2">
                                    <TextBlock 
                                               Foreground="#160C31"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               FontFamily="Montserrat"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="0,0,0,0" />
                                </Grid>

                            </Grid>
                        </Grid>

                        <Grid Grid.Row="1"
                              Cursor="Hand">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    Background="#FAFAFC"
                                    BorderBrush="#0747A6"
                                    BorderThickness="0.5"
                                    Margin="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0"
                                          HorizontalAlignment="Center"
                                          >
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox Name="tbNameToSearch"
                                                   Foreground="#160C31"
                                                   FontSize="15"
                                            Width="300"
                                            Height="30"
                                                   FontFamily="Montserrat"
                                                   HorizontalAlignment="Center"
                                            BorderThickness="1"
                                            BorderBrush="#0747A6"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"
                                                   Padding="0"  />
                                        <Button x:Name="btnSearch"
        BorderThickness="0"
        Foreground="White"
        FontSize="14"
        FontFamily="Montserrat"
        Cursor="Hand"
        Margin="10,0,0,0"
        Click="btnSearch_Click">

                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background"
                    Value="#0747A6" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver"
                         Value="True">
                                                            <Setter Property="Background"
                            Value="#F5DEB3" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Button.Template>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border CornerRadius="0"
                    Height="30"
                    Width="100"
                    Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Поиск"
                   Margin="0,0,0,0"
                   VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                        </StackPanel>

                                        


                                    </Grid>

                                    <ScrollViewer Grid.Row="1"
                                                  Style="{StaticResource CustomScrollViewerStyle}"
                                                  Margin="0,0,0,0"
                                                  VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="cbAllUsers">
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Border>

                        </Grid>

                    </Grid>

                </Border>
            </Grid>

        </Grid>
    </Border>
</Window>
